{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "importHelpers": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@generated/*": ["src/@generated/*"],
      "@app_modules/*": ["src/app_modules/*"],
      "@app_types/*": ["src/types/*"],
      "@album/*": ["src/album/*"],
      "@artist/*": ["src/artist/*"],
      "@auth/*": ["src/auth/*"],
      "@cloudinary/*": ["src/cloudinary/*"],
      "@genre/*": ["src/genre/*"],
      "@track/*": ["src/track/*"],
      "@user/*": ["src/user/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "@generated/*", "prisma/*.ts"]
}
